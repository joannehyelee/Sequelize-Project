{{> nav }}

<div class="container" style="padding: 2em 0;">
	<div class="row justify-content-md-center">
		<div class="col-sm-12 col-12">
			<!-- Button trigger modal -->
			<button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#addProductModal" style="float:right; margin-bottom: 10px;">Add New Product</button>
			<table class="table table-bordered">
			  <thead class="thead-light">
			    <tr>
			      <th scope="col">ID</th>
			      <th scope="col">Image</th>
			      <th scope="col">Product code</th>
			      <th scope="col">Description</th>
			      <th scope="col">Price</th>
			      <th scope="col">Quantity</th>
			      <th scope="col">Action</th>
			    </tr>
			  </thead>
			  <tbody>
					{{#each games }}
			    <tr>
			        <th scope="row">{{ id }}</th>
			        <td><img src="{{ imageURL }}"></td>
			        <td>{{ code }}</td>
			        <td>{{ description }}</td>
			        <td>${{ price }}</td>
			        <td>{{ quantity }}</td>
			        <td><button type="button" class="btn btn-primary btn-sm editProductBtn" data-toggle="modal" data-target="#editProductModal">Edit</button> <button type="button" class="btn btn-danger btn-sm deleteProductBtn">Delete</button></td>
			    </tr>
					{{/each}}
			  </tbody>
			</table>
		</div>
	</div>
</div>
<!-- Add Product Modal -->
<div class="modal fade" id="addProductModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Add New Product</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
		<form method="put" encType="multipart/form-data">
		  <div class="form-row" style="padding-bottom:1em;">
		    <div class="col-md-12">
		      <label for="addinputProductCode">Product code</label>
		      <input type="text" class="form-control inputProductCode" id="addinputProductCode" required>
		    </div>
		  </div>
		  <div class="form-row" style="padding-bottom:1em;">
		    <div class="col-md-12">
		      <label for="addinputDescription">Description</label>
		      <input type="text" class="form-control inputDescription" id="addinputDescription" required>
		    </div>
		  </div>
		  <div class="custom-file" style="padding-bottom:1em;">
			  <input type="file" class="custom-file-input inputFile" id="addinputFile">
			  <label class="custom-file-label" for="addinputFile">Choose file</label>
		</div>
		  <div class="form-row" style="margin-top:1em;">
		    <div class="col-md-6 mb-3">
		      <label for="addinputPrice">Price</label>
		      <input type="number" class="form-control inputPrice" id="addinputPrice">
		    </div>
		    <div class="col-md-6 mb-3">
		      <label for="addinputQuantity">Quantity</label>
		      <input type="number" class="form-control inputQuantity" id="addinputQuantity">
		    </div>
		  </div>
		</form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="addProductBtn">Submit</button>
      </div>
    </div>
  </div>
</div>
<!-- Edit Product Modal -->
